<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Photo</th>
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Area</th>
      <th scope="col">Position</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td><img src="{{profilePic.path}}" alt="Profile picture" width="25px"></td>
      <td>{{name}}</td>
      <td>{{surname}}</td>
      <td>{{dpto}}</td>
      <td>{{dpt}}</td>
      <td><a href="/users/edit/{{_id}}" span class="badge badge-primary badge-pill">Edit</a></td>
      <td><a href="/users/delete/{{_id}}" span class="badge badge-primary badge-pill">Delete</a></td>
    </tr>
    {{/each}}
 
  </tbody>
</table>