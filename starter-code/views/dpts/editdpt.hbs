<form action="/dpt/edit/{{dpt.id}}" method="post">



  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputName">Denominación del Puesto</label>
      <input type="text" class="form-control" id="inputName" name="Denom" value="{{dpt.Denom}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Area</label>
      <input type="text" class="form-control" id="inputOccupation" name="Area" value={{dpt.Area}}>
    </div>
  </div>

    <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputName">Colectivo</label>
      <input type="text" class="form-control" id="inputName" name="Colectivo" value="{{dpt.Colectivo}}">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Misión</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="Mision" rows="2">{{dpt.Mision}}</textarea>
  </div>
   <div class="form-group">
    <label for="exampleFormControlTextarea1">Funciones</label>
    <textarea class="form-control" id="Funciones" rows="3">{{dpt.Funciones}}</textarea>
  </div>
{{#each dpt.Tareas}}
 <div class="form-row">
   
    <div class="form-group col-md-6">

      <label for="inputName">Tareas - Tipo</label>
      <input type="text" class="form-control" id="inputName" name="Tareas.tipo" value="{{tipo}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Tareas - Dedicación</label>
      <input type="text" class="form-control" id="inputOccupation" name="Tareas.resultado" value={{dedicacion}}>
    </div>
  </div>

  <div class="form-group">
      <label for="inputName">Tareas - Resultado</label>
    
<input type="text" class="form-control" id="inputName" name="Tareas.tipo" value="{{resultado}}">
{{/each}}
</div>
{{#each dpt.Formacion}}
 <div class="form-row">
   
    <div class="form-group col-md-6">

      <label for="inputName">Formación - Título</label>
      <input type="text" class="form-control" id="inputName" name="Formacion.titulo" value="{{titulo}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Formación - Idiomas</label>
      <input type="text" class="form-control" id="inputOccupation" name="Formacion.idiomas" value={{idiomas}}>
    </div>
  </div>

 <div class="form-row">
   
    <div class="form-group col-md-6">

      <label for="inputName">Formación - Experiencia</label>
      <input type="text" class="form-control" id="inputName" name="Formacion.titulo" value="{{experiencia}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Formación - Habilidades</label>
      <input type="text" class="form-control" id="inputOccupation" name="Formacion.idiomas" value={{habilidades}}>
    </div>
  </div>
{{/each}}
  </div>

  {{#each dpt.ResAut}}
 <div class="form-row">
   
    <div class="form-group col-md-6">

      <label for="inputName">Nivel Responsabilidad</label>
      <input type="text" class="form-control" id="inputName" name="Formacion.titulo" value="{{NivRes}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">¿Colaboradores?</label>
      <input type="text" class="form-control" id="inputOccupation" name="Formacion.idiomas" value={{Colaboradores}}>
    </div>
  </div>

 <div class="form-row">
   
    <div class="form-group col-md-6">

      <label for="inputName">Nivel Supervisión</label>
      <input type="text" class="form-control" id="inputName" name="Formacion.titulo" value="{{NivSuperv}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Formación - Habilidades</label>
      <input type="text" class="form-control" id="inputOccupation" name="Formacion.idiomas" value={{habilidades}}>
    </div>
  </div>
{{/each}}

  {{#each dpt.Condiciones}}
 <div class="form-row">
   
    <div class="form-group col-md-6">

      <label for="inputName">Condiciones - ¿Turnicidad?</label>
      <input type="text" class="form-control" id="inputName" name="Formacion.titulo" value="{{turnicidad}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Condiciones - ¿Colaboradores?</label>
      <input type="text" class="form-control" id="inputOccupation" name="Formacion.idiomas" value={{Colaboradores}}>
    </div>
  </div>

 <div class="form-row">
   
    <div class="form-group col-md-6">

      <label for="inputName">Condiciones - ¿Nocturnidad?</label>
      <input type="text" class="form-control" id="inputName" name="Formacion.titulo" value="{{nocturnidad}}">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Condiciones - ¿Peligro?</label>
      <input type="text" class="form-control" id="inputOccupation" name="Formacion.idiomas" value={{peligro}}>
    </div>
  </div>
{{/each}}


  <button type="submit" class="btn btn-success">Update DPT</button>

</form>

