<img src="/images/header.jpg" class="img-fluid" alt="Responsive image">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">



<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 class="display-4">Catálogo de Puestos</h2>
    <p class="lead">Relación de puestos de trabajo definidos en la organización:</p>
  </div>
</div>

<a href="/dpt/new" class="btn btn-warning">Añadir nueva DPT</a>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Denominación del Puesto</th>
      <th scope="col">Area</th>
      <th scope="col">Colectivo</th>
    </tr>
  </thead>
  <tbody>
    {{#each dpt}}
    <tr>
      <td>{{Denom}}</td>
      <td>{{Area}}</td>
      <td>{{Colectivo}}</td>
       <td><a href="/dpt/{{_id}}" span class="badge badge-primary badge-pill">+</a></td>
    </tr>
    {{/each}}
 
  </tbody>
</table>





