
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">New JobNow account</h1>
    <p class="lead">Just basics...</p>
  </div>
</div>
<div class="index-background">

<div class="container">
  <div class="row">
    {{ message }}
    <div class="col-sm-6 centered-form">
      <form action="/signup" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control">
        </div>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
          <label for="surname">Surname</label>
          <input type="text" name="surname" class="form-control">
        </div>
        <div class="form-group">
          <label for="dpto">Area</label>
          <select class="form-control form-control-lg" name="dpto" id="dpto">
            <option>RRHH</option>
            <option>Hacienda</option>
            <option>Sanidad</option>
            <option>Econom√≠a y Empleo</option>
          </select>
        </div>
        <div class="form-group">
          <label for="workCenter">Work Center</label>
          <select class="form-control form-control-lg" name="workCenter" id="workCenter">
            {{#each centers}}
            <option>{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="dpt">Position</label>
          <select class="form-control form-control-lg" name="dpt" id="dpt">
            {{#each dpts}}
            <option>{{Denom}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" name="email" class="form-control">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control">
        </div>
        <div class="form-group">
          <label for="photo">Photo</label>
          <input type="file" name="photo" class="form-control">
        </div>
        <button type="submit">Signup</button>
      </form>
      </div>
    </div>
  </div>
</div>


