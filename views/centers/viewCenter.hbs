<script>
  window.center = {{{ centers }}}
//window.centers ;
</script>
<script src="/javascripts/script.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClr_fVK41OBJxuab_HEI3I30pcijqHB7E"></script>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1>{{center.name}}</h1>
        <h3>{{center.description}}</h3>

      </div>

      <div class="col">
        <div id="map" style="height:300px"></div>
      </div>
    </div>
  </div>
</div>

<div class="viewCenter">
  <a href="/centers/edit/{{center._id}}" class="btn btn-info">Editar este centro</a>
  <a href="/centers/delete/{{center._id}}" span class="btn btn-danger">Eliminar este centro</a>
  
  <div class="centrar">

  </div>


  <div class="centrar">
    <h2>Colaboradores en este centro</h2>
  </div>


  <div class="container">
    <div class="row">
      {{#each users}}
      <div class="col"></div>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="../../{{profilePic.path}}" alt="Profile" height="170px">
        <div class="card-body">
          <h5 class="card-title">{{name}} {{surname}}</h5>
          <p class="card-text">{{workCenter.name}}
            <br>{{dpto}}
            <br>{{dpt.Denom}}</p>
          <a href="/users/profile/{{_id}}" class="btn btn-primary">Ver ficha</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</div>